<LoginScreen>:
    name: 'login_screen'

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(24)
        spacing: dp(16)
        adaptive_height: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            text: 'Login / Registro'
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
            theme_text_color: "Primary"

        MDTextField:
            id: nome
            hint_text: 'Nome (para registro)'
            helper_text: 'Opcional para login'
            helper_text_mode: 'on_focus'
            mode: "rectangle"
            size_hint_y: None
            height: dp(56)

        MDTextField:
            id: email
            hint_text: 'Email'
            helper_text: 'Digite seu email'
            helper_text_mode: 'on_focus'
            mode: "rectangle"
            size_hint_y: None
            height: dp(56)

        MDTextField:
            id: senha
            hint_text: 'Senha'
            helper_text: 'Digite sua senha'
            helper_text_mode: 'on_focus'
            password: True
            mode: "rectangle"
            size_hint_y: None
            height: dp(56)

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height

            MDRaisedButton:
                text: 'Login'
                md_bg_color: app.theme_cls.primary_color
                size_hint_y: None
                height: dp(50)
                on_release: root.login()

            MDRaisedButton:
                text: 'Registrar'
                md_bg_color: app.theme_cls.accent_color
                size_hint_y: None
                height: dp(50)
                on_release: root.register()